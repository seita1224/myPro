<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity"
    android:background="@drawable/kei">

    <Button
        android:text="アカウント登録"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="24sp"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <requestFocus />
    </Button>

    <Button
        android:text="ログイン"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/checkBox"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2"
        android:textSize="24sp"
        android:layout_toEndOf="@+id/checkBox" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:text="ログイン状態を保存する"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:textColor="@color/bootstrap_gray"
        android:button="@android:drawable/checkbox_off_background"
        android:textSize="20sp"
        android:layout_marginTop="43dp"
        android:checked="false"
        android:duplicateParentState="false"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <TextView
        android:text="まだアカウントをお持ちでない方"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textColor="@color/bootstrap_gray"
        android:textSize="20sp"
        android:layout_marginTop="256dp"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText"
        android:background="#FFFFFF"
        android:text=""
        android:textColor="@color/bootstrap_gray"
        android:textSize="24sp"
        android:layout_below="@+id/logo"
        android:layout_alignEnd="@+id/button2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:text="メールアドレス"
        android:textColor="@color/bootstrap_gray"
        android:layout_marginRight="26dp"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/editText"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignStart="@+id/button2" />

    <TextView
        android:text="パスワード"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="@color/bootstrap_gray"
        android:textSize="24sp"
        android:layout_above="@+id/checkBox"
        android:layout_alignStart="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText2"
        android:background="@android:color/background_light"
        android:text=""
        android:textSize="24sp"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <TextView
        android:id="@+id/loginErrorTextView"
        android:text=""
        android:textSize="30sp"
        android:textColor="@color/bootstrap_brand_danger"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:layout_marginTop="50dp"/>

</RelativeLayout>
